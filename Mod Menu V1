from time import sleep
import webbrowser
import sys
import os

print(""" 

      \033[35mMOD MENU
         V1
       PYTHON\033[0m
""")
while True:
    print(""" 
  \033[1;34m
[1] Softwares de Trabalho
[2] Bater Ponto
[3] Padrões de Atendimentos
